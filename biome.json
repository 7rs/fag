{
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "indentWidth": 2
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    },
    "overrides": [
        {
            "includes": ["uno.config.ts"],
            "javascript": {
                "formatter": {
                    "trailingCommas": "none"
                }
            }
        },
        {
            "includes": ["node_modules/**", "dist/**", "public/**", "boorufind-wasm/**"],
            "linter": {
                "enabled": false
            }
        }
    ]
}
